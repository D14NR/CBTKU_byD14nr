{
  "name": "cbtku-2026",
  "version": "1.0.0",
  "description": "Sistem Ujian Online CBTKU 2026 - Computer Based Test dengan integrasi Supabase",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "dev:debug": "nodemon --inspect api/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "node test-load.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,html}\"",
    "security:check": "npm audit",
    "security:fix": "npm audit fix",
    "dependencies:check": "npm-check-updates",
    "dependencies:update": "ncu -u",
    "build:css": "postcss styles/*.css -o public/css/main.min.css",
    "build:js": "esbuild src/*.js --bundle --minify --outdir=public/js",
    "build": "npm run build:css && npm run build:js",
    "clean": "rm -rf node_modules && rm -rf package-lock.json",
    "clean:install": "npm run clean && npm install",
    "vercel:deploy": "vercel --prod",
    "vercel:dev": "vercel dev",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "backup:db": "node scripts/backup-db.js",
    "cleanup:db": "node scripts/cleanup-db.js",
    "stats": "node scripts/generate-stats.js"
  },
  "keywords": [
    "cbt",
    "ujian-online",
    "education",
    "examination",
    "supabase",
    "express",
    "nodejs"
  ],
  "author": "CBTKU Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cbtku-2026.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/cbtku-2026/issues"
  },
  "homepage": "https://github.com/your-username/cbtku-2026#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-async-errors": "^3.1.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@supabase/supabase-js": "^2.39.0",
    "redis": "^4.6.11",
    "connect-redis": "^7.1.0",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "@aws-sdk/client-s3": "^3.398.0",
    "node-cache": "^5.1.2",
    "axios": "^1.6.0",
    "crypto-js": "^4.1.1",
    "qr-image": "^3.2.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "node-schedule": "^2.1.1",
    "node-cron": "^3.0.3",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "esbuild": "^0.19.5",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "tailwindcss": "^3.3.5",
    "npm-check-updates": "^16.14.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "vercel": "^32.3.0",
    "@vercel/node": "^3.0.6",
    "@types/node": "^20.8.6",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/scripts/"
    ],
    "collectCoverageFrom": [
      "api/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "eqeqeq": "error",
      "curly": "error",
      "camelcase": "warn",
      "consistent-return": "warn",
      "no-var": "error",
      "prefer-const": "warn"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "build/",
      "coverage/",
      "*.min.js"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
